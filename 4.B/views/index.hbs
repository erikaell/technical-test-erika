<html>

<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous" />
  <link rel="stylesheet" href="../public/style.css" />
  <title>4B</title>
</head>

<body>
  <div class="d-flex flex-column align-items-center">
    <div class="row">
      <div class="col-md-6">
        <h2 class="mt-3 fw-bold mb-3" style="color:darkturquoise; text-align:left">Provinsi & Kabupaten</h2>
      </div>
      <div class="mt-3 mb-3 col-md-2">
        <a href="/add-provinsi" class="btn btn-dark text-dark fw-bold nav-justified flex-fill"
          style="background-color:darkturquoise">Add Provinsi</a>
      </div>
      <div class="mt-3 mb-3 col-md-2">
        <a href="/add-kabupaten" class="btn btn-dark text-dark fw-bold nav-justified flex-fill"
          style="background-color:darkturquoise">Add Kabupaten</a>
      </div>
      <div class="mt-3 mb-3 col-md-2">
        <a href="/kabupaten" class="btn btn-dark text-dark fw-bold nav-justified flex-fill"
          style="background-color:darkturquoise">Kabupaten</a>
      </div>
    </div>
    <div style="margin-bottom:5px; color:darkturquoise">
      <h2>Provinsi</h2>
    </div>
    <div class="container">
      <div class="row">
        {{#each prov}}
        <div class="col-md-3 mb-2">
          <div class="card shadow p-2"
            style="width:100%; background-color:black; border-radius:0 ; border-color:darkturquoise; border-width:thin">
            <img src="{{this.photo}}" class="card-img" alt="..." style="border-radius:0" />
            <div class="card-body">
              <h5 class="card-title" style="color:darkturquoise">{{this.nama}}</h5>
              <h6 class="card-subtitle mb-3" style="color:white">{{this.diresmikan}}</h6>
              <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                <a href="/detail/{{this.id}}" class="btn btn-dark text-dark fw-bold nav-justified flex-fill"
                  style="background-color:darkturquoise">Detail</a>
              </div>
              <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-1">
                <a href="edit-provinsi/{{this.id}}" class="btn btn-dark text-dark fw-bold nav-justified flex-fill"
                  style="background-color:darkturquoise">Edit</a>
                <a href="delete-provinsi/{{this.id}}" class="btn btn-dark text-dark fw-bold nav-justified flex-fill"
                  style="background-color:darkturquoise">Delete</a>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</body>

</html>